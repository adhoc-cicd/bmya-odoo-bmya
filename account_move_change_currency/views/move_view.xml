<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="invoice_form">
        <field name="name">account.move.change_currency.view</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']/field[@name='currency_id']" position="before">
                <button name="%(account_move_change_currency.action_account_change_currency)d" icon="fa-wechat" type="action" class="oe_inline oe_link"
                        string=" Change Currency" attrs="{'invisible':[('state','!=','draft')]}" groups="account.group_account_invoice" help="Cambiar la moneda y actualizar precios"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']/field[@name='currency_id']" position="attributes">
                    <attribute name="nolabel">1</attribute>
                    <attribute name="help">Cambiar la moneda sin actualizar precios</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="invoice_no_exchange_form">
        <field name="name">account.move.currency_id.view</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <field name="currency_id" position="attributes">
                <t groups="account_move_change_currency.group_restrict_change_currency_exchange">
                    <attribute name="readonly">1</attribute>
                </t>
            </field>
        </field>
    </record>

</odoo>
