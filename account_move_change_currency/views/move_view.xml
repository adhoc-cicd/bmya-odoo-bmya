<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="invoice_form">
        <field name="name">account.move.change_currency.view</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='currency_div']" position="after">
                <div name="change_currency_button_div">
                    <button name="%(account_move_change_currency.action_account_change_currency)d" icon="fa-refresh" type="action" class="oe_inline oe_link"
                        invisible="state != 'draft'" groups="account.group_account_invoice" help="Change currency and update prices"
                        context="{'default_currency_id': currency_id}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
